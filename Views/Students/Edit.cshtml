@{
}

@model StudentsPortal.web.Models.Entities.Students;

<h1>Edit Student</h1>

@if (Model is null)
{
    <p>Student Not Found</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">ID</label>
            <input class="form-control" readonly type="text" asp-for="Id" />
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input class="form-control" type="text" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input class="form-control" type="email" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input class="form-control" type="text" asp-for="Phone" />
        </div>

        <div class="mt-3">
            <input class="form-check-input" type="checkbox" asp-for="Subscribe" id="Subscribed" />
            <label class="form-check-label">Subscribe</label>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" 
            asp-action="Delete"
            asp-controller="Students">Delete</button>
        </div>

    </form>
}

